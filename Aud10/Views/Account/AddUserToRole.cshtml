@model Aud10.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add User with the email @Model.Email to a role </h2>


@using (Html.BeginForm("AddUserToRole", "Account"))
            {
                <div class="form-group">
                    @Html.LabelFor(m=>m.Email)
                    @Html.TextBoxFor(m=>m.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    
                    @Html.DropDownListFor(m=>m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <button class="btn-default" type="submit">Submit</button>
                </div>
            }
